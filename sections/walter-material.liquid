  Section: Materials Comparison (Final Fix: Wider Cards + No End Gap)
{% endcomment %}

{%- style -%}
  #shopify-section-{{ section.id }} .materials {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .materials__inner {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding-top: {{ section.settings.pt_d }}px;
    padding-bottom: {{ section.settings.pb_d }}px;
    padding-left: {{ section.settings.pad_x_d }}px;
    padding-right: {{ section.settings.pad_x_d }}px;
  }

  /* Typography */
  #shopify-section-{{ section.id }} .materials__title {
    margin: 0 0 16px;
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size_d }}px;
    font-weight: 400;
    line-height: 1.3;
    text-transform: capitalize;
  }

  #shopify-section-{{ section.id }} .materials__sub {
    margin: 0 0 48px;
    color: {{ section.settings.sub_color }};
    font-size: {{ section.settings.sub_size_d }}px;
    line-height: 1.5;
  }

  /* Tabs Navigation */
  #shopify-section-{{ section.id }} .materials__tabs {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    border: 1.5px solid {{ section.settings.border_color }};
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 48px;
    max-width: 800px;
  }

  #shopify-section-{{ section.id }} .materials__tab {
    appearance: none;
    color: {{ section.settings.tab_text_color }};
    background: {{ section.settings.bg_color }};
    border: 0;
    padding: 14px 12px;
    cursor: pointer;
    border-right: 1.5px solid {{ section.settings.border_color }};
    font-size: 20px;
    font-weight: 500;
    text-transform: capitalize;
    transition: background 0.3s, color 0.3s;
  }

  #shopify-section-{{ section.id }} .materials__tab:last-child {
    border-right: 0;
  }

  #shopify-section-{{ section.id }} .materials__tab.is-active {
    background: {{ section.settings.tab_active_bg }};
    color: {{ section.settings.tab_active_text }};
  }

  /* =========================================
     SLIDER & CARDS
     ========================================= */
  
  #shopify-section-{{ section.id }} .slick-list { 
    margin: 0; 
    padding: 0;
    overflow: visible; /* Shadows rendering */
  }

  #shopify-section-{{ section.id }} .slick-track {
    display: flex;
    gap: 0; /* Handled by margins */
  }

  #shopify-section-{{ section.id }} .slick-slide { 
    height: auto; 
    display: flex; 
    flex-direction: column;
    opacity: 1;
    transition: opacity 0.3s;
  }

  #shopify-section-{{ section.id }} .comp-card {
    border-radius: 24px;
    border: 1.5px solid {{ section.settings.card_border }};
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
    background: {{ section.settings.card_bg }};
    box-sizing: border-box;
  }

  #shopify-section-{{ section.id }} .comp-card__media {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
  }

  #shopify-section-{{ section.id }} .comp-card__media img {
    object-fit: cover;
    display: block;
    width: 100%;
    height: 100%;
  }

  #shopify-section-{{ section.id }} .mat-top-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    z-index: 2;
    padding: 6px 10px;
    border-radius: 6px;
    background: {{ section.settings.badge_bg }};
    color: {{ section.settings.badge_text }};
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
  }

  #shopify-section-{{ section.id }} .comp-card__body {
    padding: 24px;
    border-top: 1.5px solid {{ section.settings.card_border }};
    flex-grow: 1;
  }

  #shopify-section-{{ section.id }} .comp-card__title {
    margin: 0 0 12px;
    color: {{ section.settings.card_title_color }};
    font-size: {{ section.settings.card_title_size }}px;
    font-weight: 500;
    line-height: 1.4;
  }

  #shopify-section-{{ section.id }} .comp-card__text {
    margin: 0;
    color: {{ section.settings.card_body_color }};
    font-size: {{ section.settings.card_body_size }}px;
    line-height: 1.5;
  }

  /* Desktop Margins */
  @media (min-width: 769px) {
    #shopify-section-{{ section.id }} .slick-slide {
       margin: 0 12px; /* 24px total gap */
    }
    #shopify-section-{{ section.id }} .slick-list {
       margin: 0 -12px;
    }
  }

  /* =========================================
     MOBILE RESPONSIVE FIXES
     ========================================= */
  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} .materials__inner {
      padding-top: {{ section.settings.pt_m }}px;
      padding-bottom: {{ section.settings.pb_m }}px;
      padding-left: 0; 
      padding-right: 0;
    }

    #shopify-section-{{ section.id }} .materials__header {
      padding-left: {{ section.settings.pad_x_m }}px;
      padding-right: {{ section.settings.pad_x_m }}px;
    }

    #shopify-section-{{ section.id }} .materials__title {
      font-size: {{ section.settings.heading_size_m }}px;
    }

    #shopify-section-{{ section.id }} .materials__sub {
      font-size: {{ section.settings.sub_size_m }}px;
    }

    #shopify-section-{{ section.id }} .materials__tabs {
      grid-template-columns: 1fr 1fr; 
      margin-left: {{ section.settings.pad_x_m }}px;
      margin-right: {{ section.settings.pad_x_m }}px;
    }
    
    #shopify-section-{{ section.id }} .materials__tab {
      font-size: 14px;
      padding: 12px 8px;
      border-right: 1.5px solid {{ section.settings.border_color }};
      border-bottom: 1.5px solid {{ section.settings.border_color }};
    }
    
    #shopify-section-{{ section.id }} .materials__tab:nth-child(2n) { border-right: 0; }
    #shopify-section-{{ section.id }} .materials__tab:nth-last-child(-n+2) { border-bottom: 0; }

    /* --- MOBILE SLIDER CSS --- */
    #shopify-section-{{ section.id }} .materials__slider {
      display: block;
      width: 100%;
      /* Left padding for the first slide to offset correctly */
      padding-left: {{ section.settings.pad_x_m }}px; 
      box-sizing: border-box;
    }

    #shopify-section-{{ section.id }} .slick-slide {
      /* Card Width: 85vw fills the screen so no huge black gap remains */
      width: 85vw; 
      max-width: 360px; /* Optional cap */
      margin-right: 16px; /* Gap between cards */
    }

    /* Target the Last Visible Slide via JS class */
    #shopify-section-{{ section.id }} .slick-slide.js-last-slide {
      margin-right: 0 !important;
    }
  }
{%- endstyle -%}

<section id="materials-sec-{{ section.id }}" class="materials">
  <div class="materials__inner">

    <header class="materials__header">
      {%- if section.settings.heading != blank -%}
        <h2 class="materials__title">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.subtext != blank -%}
        <p class="materials__sub">{{ section.settings.subtext }}</p>
      {%- endif -%}
    </header>

    <nav class="materials__tabs" role="tablist">
      {%- for block in section.blocks -%}
        {%- if block.type == 'category' -%}
          <button class="materials__tab {% if forloop.first %}is-active{% endif %}" 
                  data-cat="{{ block.settings.cat_id }}" 
                  role="tab" 
                  aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
                  {{ block.shopify_attributes }}>
            {{ block.settings.title }}
          </button>
        {%- endif -%}
      {%- endfor -%}
    </nav>

    <div class="materials__slider js-materials-slider-{{ section.id }}">
      {%- for block in section.blocks -%}
        {%- if block.type == 'card' -%}
          <div class="materials-slide-wrapper" data-cat="{{ block.settings.cat_id }}">
            <article class="comp-card" {{ block.shopify_attributes }}>
              <div class="comp-card__media">
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: width: 600 | image_tag: loading: 'lazy', alt: block.settings.title }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag }}
                {%- endif -%}
                
                {%- if block.settings.badge_text != blank -%}
                  <span class="mat-top-badge" 
                        style="background:{{ block.settings.badge_bg | default: section.settings.badge_bg }}; color:{{ block.settings.badge_text_color | default: section.settings.badge_text }}">
                    {{ block.settings.badge_text }}
                  </span>
                {%- endif -%}
              </div>

              <div class="comp-card__body">
                {%- if block.settings.title != blank -%}
                  <h3 class="comp-card__title">{{ block.settings.title }}</h3>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <p class="comp-card__text">{{ block.settings.text }}</p>
                {%- endif -%}
              </div>
            </article>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>

  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function(){
  var $ = window.jQuery;
  if (!$ || !$.fn || !$.fn.slick) return;

  var SECTION_ID = "{{ section.id }}";
  var $wrap      = $('#materials-sec-' + SECTION_ID);
  var $slider    = $wrap.find('.js-materials-slider-' + SECTION_ID);
  var colsDesktop = {{ section.settings.cols_desktop }};

  var $firstTab = $wrap.find('.materials__tab').first();
  var activeCat = $firstTab.length ? $firstTab.attr('data-cat') : 'cat1';

  function equalizeHeights(){
    var maxH = 0;
    $slider.find('.comp-card').css('height', '');
    $slider.find('.slick-slide').each(function(){
       var h = $(this).find('.comp-card').outerHeight();
       if(h > maxH) maxH = h;
    });
    if (maxH > 0) $slider.find('.comp-card').css('height', maxH + 'px');
  }

  // --- NEW FUNCTION: Fix End Margin ---
  function fixLastSlideMargin() {
    // Remove class from all
    $slider.find('.slick-slide').removeClass('js-last-slide');
    
    // Find the last VISIBLE slide in the slick list
    // Note: In slick, we look for the last 'slick-slide' that isn't cloned (if infinite:false)
    var $slides = $slider.find('.slick-slide');
    if($slides.length > 0) {
      $slides.last().addClass('js-last-slide');
    }
  }

  function initSlick() {
    if ($slider.hasClass('slick-initialized')) {
       $slider.slick('unslick');
    }

    $slider.slick({
      arrows: false,
      dots: false,
      infinite: false,
      slidesToShow: colsDesktop,
      slidesToScroll: 1,
      swipeToSlide: true,
      touchThreshold: 20,
      variableWidth: false,
      responsive: [
        { 
          breakpoint: 1024, 
          settings: { 
            slidesToShow: Math.min(colsDesktop, 2) 
          } 
        },
        { 
          breakpoint: 768,  
          settings: { 
            slidesToShow: 1,
            variableWidth: true,
            centerMode: false,
            swipeToSlide: true,
            touchThreshold: 40
          } 
        }
      ]
    });
    
    // Apply fixes
    fixLastSlideMargin();
    setTimeout(equalizeHeights, 100);
  }

  function updateSlider(cat) {
    if ($slider.hasClass('slick-initialized')) {
      $slider.slick('slickUnfilter');
    }
    
    $slider.slick('slickFilter', function(index, element){
       return $(element).attr('data-cat') === cat;
    });
    
    // Re-apply fix after filter
    fixLastSlideMargin();
    equalizeHeights();
    
    if ($slider.hasClass('slick-initialized')) {
       $slider.slick('slickGoTo', 0, true);
    }
  }

  function setActiveTab(cat){
    activeCat = cat;
    $wrap.find('.materials__tab').removeClass('is-active').attr('aria-selected','false');
    $wrap.find('.materials__tab[data-cat="'+cat+'"]').addClass('is-active').attr('aria-selected','true');
  }

  initSlick();
  updateSlider(activeCat);

  $wrap.on('click', '.materials__tab', function(){
    var cat = $(this).attr('data-cat');
    if (cat === activeCat) return;
    setActiveTab(cat);
    updateSlider(cat);
  });

  var t;
  $(window).on('resize', function(){
    clearTimeout(t);
    t = setTimeout(function(){
      equalizeHeights();
      fixLastSlideMargin();
    }, 200);
  });

  document.addEventListener('shopify:section:load', function(e){
    if (e.detail.sectionId !== SECTION_ID) return;
    $wrap   = $('#materials-sec-' + SECTION_ID);
    $slider = $wrap.find('.js-materials-slider-' + SECTION_ID);
    initSlick();
    var cat = $wrap.find('.materials__tab.is-active').attr('data-cat') || 'cat1';
    updateSlider(cat);
  });
});
</script>

