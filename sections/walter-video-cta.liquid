{%- comment -%}
  Titanium Video CTA Section
  Fully Dynamic with Native Video Support and Responsive Scaling
{%- endcomment -%}

{%- style -%}
  #ti-video-cta-{{ section.id }} {
    background: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
  }

  #ti-video-cta-{{ section.id }} .ti-video-cta__inner {
    /* CSS Variables */
    --heading: {{ section.settings.heading_color }};
    --btn-bg: {{ section.settings.btn_bg_color }};
    --btn-text: {{ section.settings.btn_text_color }};
    
    margin: 0 auto;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: 120px;
    padding-right: 120px;
    display: grid;
    grid-template-columns: 840px 1fr; /* Base Desktop Layout */
    gap: 200px;
    align-items: center;
  }

  /* --- MEDIA --- */
  #ti-video-cta-{{ section.id }} .ti-video-cta__media {
    width: 840px;
    height: 544px;
    border-radius: 24px;
    overflow: hidden;
    background: #111;
    position: relative;
  }

  #ti-video-cta-{{ section.id }} .ti-video-cta__media video,
  #ti-video-cta-{{ section.id }} .ti-video-cta__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* --- COPY --- */
  #ti-video-cta-{{ section.id }} .ti-video-cta__heading {
    margin: 0 0 32px 0;
    color: var(--heading);
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 400;
    line-height: 130%;
    letter-spacing: 1.92px;
    text-transform: capitalize;
  }

  #ti-video-cta-{{ section.id }} .ti-video-cta__text {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    font-weight: 400;
    line-height: 150%;
    letter-spacing: 0.64px;
    margin-bottom: 32px;
  }

  #ti-video-cta-{{ section.id }} .ti-video-cta__text p {
    margin-bottom: 12px;
    margin-top: 0;
  }
  #ti-video-cta-{{ section.id }} .ti-video-cta__text p:last-child {
    margin-bottom: 0;
  }

  #ti-video-cta-{{ section.id }} .ti-video-cta__btn {
    display: inline-block;
    padding: 18px 24px;
    border-radius: 16px;
    background: var(--btn-bg);
    text-decoration: none;
    text-align: center;
    min-width: 260px;
    width: 100%;
    color: var(--btn-text);
    font-size: {{ section.settings.btn_size }}px;
    font-weight: 500;
    line-height: 100%;
    letter-spacing: 0.8px;
    text-transform: capitalize;
    transition: opacity 0.3s ease;
  }
  
  #ti-video-cta-{{ section.id }} .ti-video-cta__btn:hover {
    opacity: 0.9;
  }

  /* --- RESPONSIVE SCALING --- */

  /* Laptop (-10%) 1200px - 1799px */
  @media (min-width: 1200px) and (max-width: 1799px) {
    #ti-video-cta-{{ section.id }} .ti-video-cta__inner {
      padding-top: calc({{ section.settings.padding_top }}px * 0.9);
      padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.9);
      padding-left: 108px; padding-right: 108px;
      grid-template-columns: 756px 1fr;
      gap: 180px;
    }
    #ti-video-cta-{{ section.id }} .ti-video-cta__media {
      width: 756px; height: 489.6px; border-radius: 21.6px;
    }
    #ti-video-cta-{{ section.id }} .ti-video-cta__heading {
      font-size: calc({{ section.settings.heading_size }}px * 0.9);
      letter-spacing: 1.728px; margin-bottom: 28.8px;
    }
    #ti-video-cta-{{ section.id }} .ti-video-cta__text {
      font-size: calc({{ section.settings.text_size }}px * 0.9);
      letter-spacing: 0.576px; margin-bottom: 28.8px;
    }
    #ti-video-cta-{{ section.id }} .ti-video-cta__btn {
      padding: 16.2px 21.6px; border-radius: 14.4px; min-width: 234px;
      font-size: calc({{ section.settings.btn_size }}px * 0.9); letter-spacing: 0.72px;
    }
  }

  /* Large Screen (+30%) 2200px+ */
  @media (min-width: 2200px) {
    #ti-video-cta-{{ section.id }} .ti-video-cta__inner {
      padding-top: calc({{ section.settings.padding_top }}px * 1.3);
      padding-bottom: calc({{ section.settings.padding_bottom }}px * 1.3);
      padding-left: 156px; padding-right: 156px;
      grid-template-columns: 1092px 1fr;
      gap: 260px;
    }
    #ti-video-cta-{{ section.id }} .ti-video-cta__media {
      width: 1092px; height: 707.2px; border-radius: 31.2px;
    }
    #ti-video-cta-{{ section.id }} .ti-video-cta__heading {
      font-size: calc({{ section.settings.heading_size }}px * 1.3);
      letter-spacing: 2.496px; margin-bottom: 41.6px;
    }
    #ti-video-cta-{{ section.id }} .ti-video-cta__text {
      font-size: calc({{ section.settings.text_size }}px * 1.3);
      letter-spacing: 0.832px; margin-bottom: 41.6px;
    }
    #ti-video-cta-{{ section.id }} .ti-video-cta__btn {
      padding: 23.4px 31.2px; border-radius: 20.8px; min-width: 338px;
      font-size: calc({{ section.settings.btn_size }}px * 1.3); letter-spacing: 1.04px;
    }
  }

  /* Medium Screen / Tablet */
  @media (max-width: 1200px) {
    #ti-video-cta-{{ section.id }} .ti-video-cta__inner {
      grid-template-columns: 1fr;
      gap: 40px;
      padding: 64px 40px;
    }
    #ti-video-cta-{{ section.id }} .ti-video-cta__media {
      width: 100%; height: auto; aspect-ratio: 16 / 9; border-radius: 16px;
    }
  }

  /* Mobile */
  @media (max-width: 749px) {
    #ti-video-cta-{{ section.id }} .ti-video-cta__inner {
      padding: 64px 16px; gap: 32px;
    }
    #ti-video-cta-{{ section.id }} .ti-video-cta__heading {
      font-size: 24px; letter-spacing: 0.96px; margin-bottom: 16px;
    }
    #ti-video-cta-{{ section.id }} .ti-video-cta__text {
      font-size: 14px; letter-spacing: 0.56px;
    }
    #ti-video-cta-{{ section.id }} .ti-video-cta__btn {
      width: 100%; border-radius: 16px; padding: 18px 20px; font-size: 18px;
    }
  }
{%- endstyle -%}

<section id="ti-video-cta-{{ section.id }}" class="ti-video-cta" aria-label="{{ section.settings.heading | escape }}">
  <div class="ti-video-cta__inner">

    <div class="ti-video-cta__media">
      {%- if section.settings.video_hosted != blank -%}
        {{ section.settings.video_hosted | video_tag: autoplay: true, loop: true, muted: true, controls: false, playsinline: true, image_size: '1200x' }}
      {%- elsif section.settings.video_url != blank -%}
        <video playsinline="true" autoplay="autoplay" loop="loop" muted="muted" preload="metadata" poster="{{ section.settings.poster | image_url: width: 1200 }}">
          <source src="{{ section.settings.video_url }}" type="video/mp4">
          {%- if section.settings.poster != blank -%}
            {{ section.settings.poster | image_url: width: 1200 | image_tag }}
          {%- endif -%}
        </video>
      {%- else -%}
        {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>

    <div class="ti-video-cta__copy">
      {%- if section.settings.heading != blank -%}
        <h2 class="ti-video-cta__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="ti-video-cta__text rte">
          {{ section.settings.text }}
        </div>
      {%- endif -%}

      {%- if section.settings.btn_label != blank -%}
        <a class="ti-video-cta__btn" href="{{ section.settings.btn_link }}" aria-label="{{ section.settings.btn_label }}">
          {{ section.settings.btn_label }}
        </a>
      {%- endif -%}
    </div>

  </div>
</section>

