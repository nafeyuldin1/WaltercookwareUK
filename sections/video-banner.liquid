{% comment %}
  Custom Hero Video Section with Logo Marquee
  Developed for Nafe - Fully Dynamic & Responsive
{% endcomment %}

{{ 'component-rating.css' | asset_url | stylesheet_tag }}

{%- style -%}
  /* Section Layout & Height */
  #Hero-{{ section.id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    height: {{ section.settings.height_mobile }}vh;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }

  @media screen and (min-width: 768px) {
    #Hero-{{ section.id }} {
      height: {{ section.settings.height_desktop }}vh;
    }
  }

  /* Header Overlap Logic */
  {% if section.settings.enable_overlap %}
    #Hero-{{ section.id }} {
      margin-top: calc(-1 * var(--header-height, 60px));
    }
    /* Ensure content is pushed down so it's not hidden behind header */
    #Hero-{{ section.id }} .hero-content-inner {
      padding-top: var(--header-height, 60px);
    }
  {% endif %}

  /* Background Media */
  .hero-media-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-media {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .media-desktop { display: none; }
  .media-mobile { display: block; height: 100%; }

  @media screen and (min-width: 768px) {
    .media-desktop { display: block; height: 100%; }
    .media-mobile { display: none; }
  }

  /* Overlay */
  .hero-overlay {
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
    pointer-events: none;
  }

  /* Content */
  .hero-content {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 0 20px;
    color: {{ section.settings.text_color }};
  }

  .hero-kicker {
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 15px;
    display: block;
  }

  .hero-heading {
    font-size: clamp(28px, 5vw, {{ section.settings.heading_size }}px);
    line-height: 1.1;
    font-weight: 800;
    margin: 0 0 20px 0;
    max-width: 900px;
    color: {{ section.settings.text_color }};
  }

  .hero-text {
    font-size: 16px;
    line-height: 1.5;
    margin-bottom: 30px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Button */
  .hero-btn {
    display: inline-block;
    padding: 15px 35px;
    background-color: {{ section.settings.btn_bg }};
    color: {{ section.settings.btn_text }};
    font-weight: 700;
    text-decoration: none;
    border-radius: 40px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid transparent;
  }

  .hero-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    opacity: 0.9;
  }

  /* Stars */
  .hero-stars {
    margin-top: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
  }
  .hero-stars svg { width: 16px; height: 16px; fill: #FFB800; }
  .star-text { font-size: 13px; font-weight: 600; opacity: 0.9; }

  /* LOGO MARQUEE CSS */
  .logo-marquee-wrap {
    position: absolute;
    bottom: 5%;
    left: 0;
    width: 100%;
    z-index: 0;
    background: {{ section.settings.marquee_bg }};
    padding: 15px 0;
    overflow: hidden;
  }

  .marquee-track {
    display: flex;
    width: max-content;
    animation: scroll-left {{ section.settings.marquee_speed }}s linear infinite;
  }

  .marquee-track:hover {
    animation-play-state: paused;
  }

  .marquee-logo {
    height: {{ section.settings.logo_height }}px;
    width: auto;
    margin: 0 40px;
    display: block;
    opacity: {{ section.settings.logo_opacity | divided_by: 100.0 }};
    filter: {{ section.settings.logo_filter }};
    transition: opacity 0.3s;
  }

  @keyframes scroll-left {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
{%- endstyle -%}

<div id="Hero-{{ section.id }}">
  
  <div class="hero-media-wrapper">
    <div class="media-desktop">
      {%- if section.settings.video_desktop != blank -%}
        {{ section.settings.video_desktop | video_tag: autoplay: true, loop: true, muted: true, controls: false, class: 'hero-media' }}
      {%- elsif section.settings.image_desktop != blank -%}
        <img src="{{ section.settings.image_desktop | image_url: width: 2000 }}" 
             alt="{{ section.settings.heading | escape }}" 
             class="hero-media" 
             loading="eager">
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'hero-media' }}
      {%- endif -%}
    </div>

    <div class="media-mobile">
      {%- assign mobile_video = section.settings.video_mobile | default: section.settings.video_desktop -%}
      {%- assign mobile_image = section.settings.image_mobile | default: section.settings.image_desktop -%}

      {%- if mobile_video != blank -%}
        {{ mobile_video | video_tag: autoplay: true, loop: true, muted: true, controls: false, class: 'hero-media' }}
      {%- elsif mobile_image != blank -%}
        <img src="{{ mobile_image | image_url: width: 800 }}" 
             alt="{{ section.settings.heading | escape }}" 
             class="hero-media" 
             loading="eager">
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'hero-media' }}
      {%- endif -%}
    </div>
    
    <div class="hero-overlay"></div>
  </div>

  <div class="hero-content page-width">
    <div class="hero-content-inner">
      {%- if section.settings.kicker != blank -%}
        <span class="hero-kicker">{{ section.settings.kicker }}</span>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h1 class="hero-heading">{{ section.settings.heading }}</h1>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="hero-text rte">{{ section.settings.text }}</div>
      {%- endif -%}

      {%- if section.settings.btn_label != blank -%}
        <a href="{{ section.settings.btn_link }}" class="hero-btn">
          {{ section.settings.btn_label }}
        </a>
      {%- endif -%}

      {%- if section.settings.show_stars -%}
        <div class="hero-stars">
          <div class="stars-svg">
            {%- for i in (1..5) -%}
              <svg viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
            {%- endfor -%}
          </div>
          {%- if section.settings.review_text != blank -%}
            <span class="star-text">{{ section.settings.review_text }}</span>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>

  {%- if section.blocks.size > 0 -%}
    <div class="logo-marquee-wrap">
      <div class="marquee-track">
        {%- for i in (1..4) -%} 
          {%- for block in section.blocks -%}
            {%- if block.settings.logo != blank -%}
              <img src="{{ block.settings.logo | image_url: width: 300 }}" 
                   alt="{{ block.settings.logo.alt | escape }}" 
                   class="marquee-logo"
                   width="{{ block.settings.logo.width }}"
                   height="{{ block.settings.logo.height }}"
                   loading="lazy">
            {%- endif -%}
          {%- endfor -%}
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}

</div>

