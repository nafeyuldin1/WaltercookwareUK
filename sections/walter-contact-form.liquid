{%- comment -%}
  Contact Form Split Section
  Fully Dynamic with Customizable Dropdown Blocks
{%- endcomment -%}

{%- style -%}
  #contact-{{ section.id }} {
    background: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  #contact-{{ section.id }} .page-width {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  #contact-{{ section.id }} .contact_form-container {
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
    gap: 40px;
  }

  /* --- LEFT: IMAGE --- */
  #contact-{{ section.id }} .contact_form-image {
    flex: 1 1 {{ section.settings.image_width }}%;
    min-width: 300px;
    position: relative;
    border-radius: 12px;
    overflow: hidden;
  }

  #contact-{{ section.id }} .contact_form-image img,
  #contact-{{ section.id }} .contact_form-image svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    min-height: 400px; /* Ensure height on mobile */
  }

  /* --- RIGHT: FORM --- */
  #contact-{{ section.id }} .contact_form-form {
    flex: 1 1 calc(100% - {{ section.settings.image_width }}% - 40px); /* Subtract gap */
    min-width: 300px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  /* Form Fields Styling */
  #contact-{{ section.id }} .contact__fields {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 20px;
  }

  #contact-{{ section.id }} .single_field {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-bottom: 20px;
  }

  #contact-{{ section.id }} label {
    font-size: 14px;
    font-weight: 500;
    color: {{ section.settings.text_color }};
    opacity: 0.9;
  }

  #contact-{{ section.id }} input,
  #contact-{{ section.id }} select,
  #contact-{{ section.id }} textarea {
    width: 100%;
    background: transparent;
    border: 1px solid {{ section.settings.border_color }};
    color: {{ section.settings.input_text_color }};
    padding: 14px 16px;
    font-size: 16px;
    border-radius: 8px;
    appearance: none; /* Remove default browser styling */
  }

  #contact-{{ section.id }} select {
    background-image: url("data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%22292.4%22%20height%3D%22292.4%22%3E%3Cpath%20fill%3D%22%23{{ section.settings.input_text_color | remove: '#' }}%22%20d%3D%22M287%2069.4a17.6%2017.6%200%200%200-13-5.4H18.4c-5%200-9.3%201.8-12.9%205.4A17.6%2017.6%200%200%200%200%2082.2c0%205%201.8%209.3%205.4%2012.9l128%20127.9c3.6%203.6%207.8%205.4%2012.8%205.4s9.2-1.8%2012.8-5.4L287%2095c3.5-3.5%205.4-7.8%205.4-12.8%200-5-1.9-9.2-5.5-12.8z%22%2F%3E%3C%2Fsvg%3E");
    background-repeat: no-repeat;
    background-position: right 16px top 50%;
    background-size: 12px auto;
  }

  #contact-{{ section.id }} input:focus,
  #contact-{{ section.id }} select:focus,
  #contact-{{ section.id }} textarea:focus {
    outline: none;
    border-color: {{ section.settings.focus_color }};
  }

  #contact-{{ section.id }} input::placeholder,
  #contact-{{ section.id }} textarea::placeholder {
    color: {{ section.settings.input_text_color }};
    opacity: 0.5;
  }

  /* Button Styling */
  #contact-{{ section.id }} .button {
    background: {{ section.settings.btn_bg_color }};
    color: {{ section.settings.btn_text_color }};
    border: none;
    padding: 16px 32px;
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    border-radius: 8px;
    width: 100%;
    transition: opacity 0.3s ease;
  }
  #contact-{{ section.id }} .button:hover {
    opacity: 0.9;
  }

  /* Success/Error Messages */
  #contact-{{ section.id }} .form-status { margin-bottom: 20px; font-size: 16px; }
  #contact-{{ section.id }} .form-status--success { color: #4BB543; }
  #contact-{{ section.id }} .form-status--error { color: #ff3333; }

  /* Mobile */
  @media screen and (max-width: 768px) {
    #contact-{{ section.id }} .contact_form-container { flex-direction: column; gap: 0; }
    #contact-{{ section.id }} .contact_form-image { width: 100%; height: 300px; min-height: 250px; margin-bottom: 40px; }
    #contact-{{ section.id }} .contact_form-form { width: 100%; }
    #contact-{{ section.id }} .contact__fields { grid-template-columns: 1fr; gap: 0; margin-bottom: 0; }
  }
{%- endstyle -%}

<section id="contact-{{ section.id }}">
  <div class="contact page-width">
    <div class="contact_form-container">
      
      <div class="contact_form-image">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy', alt: 'Contact Us' }}
        {%- else -%}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>        
      
      <div class="contact_form-form">
        {% form 'contact' %}
          
          {%- if form.posted_successfully? -%}
            <h2 class="form-status form-status--success" tabindex="-1" autofocus>
              Thank you! Your message has been sent.
            </h2>
          {%- elsif form.errors -%}
            <div class="form-status form-status--error">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}

          <div class="contact__fields">
            <div class="single_field">
              <label for="ContactForm-first-name-{{ section.id }}">First Name</label>
              <input type="text" name="contact[first_name]" id="ContactForm-first-name-{{ section.id }}" placeholder="First Name" required>
            </div>
            <div class="single_field">
              <label for="ContactForm-last-name-{{ section.id }}">Last Name</label>
              <input type="text" name="contact[last_name]" id="ContactForm-last-name-{{ section.id }}" placeholder="Last Name" required>
            </div>
          </div>

          <div class="single_field">
            <label for="ContactForm-email-{{ section.id }}">Email</label>
            <input type="email" name="contact[email]" id="ContactForm-email-{{ section.id }}" placeholder="you@company.com" required>
          </div>

          <div class="contact__fields">
            
            <div class="single_field">
              <label for="ContactForm-selector-{{ section.id }}">{{ section.settings.selector_label }}</label>
              <select id="ContactForm-selector-{{ section.id }}" name="contact[{{ section.settings.selector_label }}]">
                <option disabled selected>Please Select</option>
                {%- for block in section.blocks -%}
                  <option value="{{ block.settings.option_value }}">{{ block.settings.option_label }}</option>
                {%- endfor -%}
              </select>
            </div>

            <div class="single_field">
              <label for="ContactForm-phone-{{ section.id }}">Phone Number</label>
              <input type="tel" name="contact[phone]" id="ContactForm-phone-{{ section.id }}" placeholder="+1 (555) 000-0000">
            </div>
          </div>

          <div class="single_field">
            <label for="ContactForm-body-{{ section.id }}">Comment</label>
            <textarea rows="5" id="ContactForm-body-{{ section.id }}" name="contact[body]" placeholder="Your message..."></textarea>
          </div>

          <div class="contact__button">
            <button type="submit" class="button">
              {{ section.settings.btn_label }}
            </button>
          </div>

        {% endform %}
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact Split Form",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Side Image"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 30,
      "max": 70,
      "step": 5,
      "unit": "%",
      "label": "Image Width (Desktop)",
      "default": 50
    },
    {
      "type": "text",
      "id": "btn_label",
      "label": "Button Label",
      "default": "Submit"
    },
    {
      "type": "text",
      "id": "selector_label",
      "label": "Dropdown Label",
      "default": "State",
      "info": "Label for the dropdown field (e.g. State, Department)"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Label Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "input_text_color",
      "label": "Input Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Input Border Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "focus_color",
      "label": "Input Focus Color",
      "default": "#bca588"
    },
    {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Button Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button Text Color",
      "default": "#121212"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "option",
      "name": "Dropdown Option",
      "settings": [
        {
          "type": "text",
          "id": "option_label",
          "label": "Label",
          "default": "New York"
        },
        {
          "type": "text",
          "id": "option_value",
          "label": "Value",
          "default": "NY",
          "info": "Value sent in the email"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact Split Form",
      "blocks": [
        { "type": "option", "settings": { "option_label": "New York", "option_value": "NY" } },
        { "type": "option", "settings": { "option_label": "Florida", "option_value": "FL" } },
        { "type": "option", "settings": { "option_label": "Alabama", "option_value": "AL" } }
      ]
    }
  ]
}
{% endschema %}