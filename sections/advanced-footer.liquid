<section id="footer-adv-{{ section.id }}" class="footer-adv" role="contentinfo">
  
  {% if section.settings.show_marquee %}
  <div class="footer-adv__marquee" aria-label="Brand message">
    <div class="marquee__track">
      {% for i in (1..2) %}
      <div class="marquee__seq" {% if i == 2 %}aria-hidden="true"{% endif %}>
        <span class="marquee__icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 48 48" fill="none">
            <path d="M24 44C35.0457 44 44 35.0457 44 24C44 12.9543 35.0457 4 24 4C12.9543 4 4 12.9543 4 24C4 35.0457 12.9543 44 24 44Z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M4 24H44M24 4C18.8645 9.39231 16 16.5535 16 24C16 31.4465 18.8645 38.6077 24 44C29.1355 38.6077 32 31.4465 32 24C32 16.5535 29.1355 9.39231 24 4Z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </span>
        <span class="marquee__text">{{ section.settings.marquee_text }}</span>
      </div>
      {% endfor %}
    </div>
  </div>
  {% endif %}

  <div class="footer-adv__inner">
    <div class="footer-adv__grid">
      
      <div class="footer-adv__brand">
        {% if section.settings.logo != blank %}
        <div class="footer-adv__logo">
          {{ section.settings.logo | image_url: width: 600 | image_tag: loading: 'lazy', alt: shop.name }}
        </div>
        {% endif %}

        {% if section.settings.blurb != blank %}
        <div class="footer-adv__blurb rte">
          {{ section.settings.blurb }}
        </div>
        {% endif %}

        {% form 'customer', class: 'footer-adv__nl-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <label for="footer-email-{{ section.id }}" class="sr-only">Email</label>
          
          <div class="nl-form__row">
            <input id="footer-email-{{ section.id }}" class="nl-form__input" type="email" name="contact[email]" value="{{ form.email }}" autocapitalize="off" autocomplete="email" placeholder="{{ section.settings.nl_placeholder }}" required>
            <button class="nl-form__btn" type="submit">{{ section.settings.nl_btn_text }}</button>
          </div>
          
          {%- if form.errors -%}
            <small class="nl-form__note" style="color: #ff6b6b;">{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
          {%- elsif form.posted_successfully? -%}
            <small class="nl-form__note" style="color: #ffffff;">{{ section.settings.nl_success }}</small>
          {%- else -%}
            {% if section.settings.nl_spam_text != blank %}
            <p class="nl-form__note">{{ section.settings.nl_spam_text }}</p>
            {% endif %}
          {%- endif -%}
        {% endform %}
      </div>

      <div class="footer-adv__links">
        {%- for i in (1..3) -%}
          {%- capture menu_handle_key -%}menu_{{ i }}{%- endcapture -%}
          {%- capture menu_title_key -%}menu_{{ i }}_title{%- endcapture -%}
          {%- assign menu = linklists[section.settings[menu_handle_key]] -%}
          {%- assign title = section.settings[menu_title_key] -%}
          
          <nav class="links-col">
            {% if title != blank %}
              <h4 class="links-col__title">{{ title }}</h4>
            {% elsif menu.title != blank %}
              <h4 class="links-col__title">{{ menu.title }}</h4>
            {% endif %}
            
            <ul class="links-col__list">
              {% for link in menu.links %}
                <li><a href="{{ link.url }}" class="links-col__link">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </nav>
        {%- endfor -%}
      </div>

      <div class="footer-adv__contact">
        {% if section.settings.contact_title != blank %}
          <h4 class="contact__title">{{ section.settings.contact_title }}</h4>
        {% endif %}

        {% if section.settings.contact_btn_label != blank %}
          <a class="contact__btn" href="{{ section.settings.contact_btn_url }}">{{ section.settings.contact_btn_label }}</a>
        {% endif %}

        {% if section.settings.contact_email_text != blank %}
        <p class="contact__email-text">{{ section.settings.contact_email_text }}</p>
        {% endif %}

        {% if section.settings.contact_email != blank %}
          <a class="contact__email" href="mailto:{{ section.settings.contact_email }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="17" height="18" viewBox="0 0 17 18" fill="none">
                <path d="M0.805622 2.5166H15.1945C15.2943 2.5166 15.3943 2.53223 15.4942 2.56347C15.5941 2.59473 15.6815 2.6416 15.7565 2.7041C15.8314 2.7666 15.8908 2.83952 15.9344 2.92285C15.9782 3.00618 16 3.09473 16 3.18848V13.8447C16 13.9384 15.9782 14.027 15.9344 14.1104C15.8908 14.1937 15.8314 14.2666 15.7565 14.3291C15.6815 14.3916 15.5941 14.4385 15.4942 14.4697C15.3943 14.501 15.2943 14.5166 15.1945 14.5166H0.805622C0.705701 14.5166 0.605778 14.501 0.505856 14.4697C0.405934 14.4385 0.318502 14.3916 0.24356 14.3291C0.168619 14.2666 0.10929 14.1937 0.065574 14.1104C0.021858 14.027 0 13.9384 0 13.8447V3.18848C0 3.09473 0.021858 3.00618 0.065574 2.92285C0.10929 2.83952 0.168619 2.7666 0.24356 2.7041C0.318502 2.6416 0.405934 2.59473 0.505856 2.56347C0.605778 2.53223 0.705701 2.5166 0.805622 2.5166ZM14.3888 5.34472L8.05622 10.0791L1.61124 5.3291V13.1885H14.3888V5.34472ZM2.00469 3.84472L8.05622 8.29785L13.9954 3.84472H2.00469Z" fill="white"/>
            </svg>
            <span>{{ section.settings.contact_email }}</span>
          </a>
        {% endif %}
      </div>

    </div>
  </div>

  <div class="footer-adv__copyright">
    <div class="footer-adv__copy-inner">
      <p class="copy__text">{{ section.settings.copyright_text | replace: '[year]', 'now' | date: "%Y" }}</p>
    </div>
  </div>

</section>

{% schema %}
{
  "name": "Advanced Footer",
  "settings": [
    {
      "type": "header",
      "content": "Top Marquee"
    },
    {
      "type": "checkbox",
      "id": "show_marquee",
      "label": "Show Marquee",
      "default": true
    },
    {
      "type": "text",
      "id": "marquee_text",
      "label": "Marquee Text",
      "default": "Taima® is the original brand of certified pure titanium kitchenware."
    },
    {
      "type": "range",
      "id": "marquee_speed",
      "min": 10,
      "max": 60,
      "step": 1,
      "unit": "s",
      "label": "Scroll Speed",
      "default": 20
    },
    {
      "type": "header",
      "content": "Brand Column"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Logo Max Width",
      "default": 260
    },
    {
      "type": "richtext",
      "id": "blurb",
      "label": "Description Text",
      "default": "<p>We only send you things worth opening. Breakthroughs, exclusive launches, toxin-free living tips, and the latest in innovation.</p>"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
