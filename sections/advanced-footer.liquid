{%- style -%}
  /* Dynamic Variables */
  #shopify-section-{{ section.id }} .footer-adv {
    --bg: {{ section.settings.color_bg }};
    --fg: {{ section.settings.color_text }};
    --muted: {{ section.settings.color_muted }};
    --accent: {{ section.settings.color_accent }};
    --border-color: {{ section.settings.color_border }};
  }

  /* Marquee — seamless loop */
  #shopify-section-{{ section.id }} .footer-adv__marquee {
    overflow: hidden;
    border-bottom: 1px solid rgba(255,255,255,.08);
    background: var(--bg);
    color: var(--fg);
    white-space: nowrap;
    position: relative;
  }

  /* Animate the TRACK */
  #shopify-section-{{ section.id }} .marquee__track {
    display: inline-flex;
    align-items: center;
    gap: 80vw;
    padding: 32px 16px;
    white-space: nowrap;
    will-change: transform;
    animation: footer-marquee {{ section.settings.marquee_speed }}s linear infinite;
  }

  #shopify-section-{{ section.id }} .marquee__seq {
    display: flex;
    align-items: center;
    gap: 12px;
    white-space: nowrap;
    flex: 0 0 auto;
  }

  #shopify-section-{{ section.id }} .marquee__icon {
    display: inline-flex;
    width: 48px;
    height: 48px;
    flex: 0 0 auto;
  }

  #shopify-section-{{ section.id }} .marquee__text {
    color: var(--fg);
    font-family: 'Neue Montreal', sans-serif;
    font-size: 64px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    letter-spacing: 2.56px;
    white-space: nowrap;
  }

  @keyframes footer-marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  /* Footer Inner */
  #shopify-section-{{ section.id }} .footer-adv__inner {
    background: var(--bg);
    max-width: 1920px;
    padding: 64px 120px;
    margin: 0 auto;
    color: var(--fg);
  }

  #shopify-section-{{ section.id }} .footer-adv__grid {
    display: grid;
    grid-template-columns: 1.1fr 1.2fr 0.3fr;
    gap: 48px;
  }

  /* Logo & Blurb */
  #shopify-section-{{ section.id }} .footer-adv__logo img {
    height: auto;
    width: auto;
    max-width: {{ section.settings.logo_width }}px;
  }

  #shopify-section-{{ section.id }} .footer-adv__blurb {
    margin: 64px 0 32px;
    max-width: 365px;
    color: var(--fg);
    font-family: 'Neue Montreal', sans-serif;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    letter-spacing: 0.64px;
  }

  #shopify-section-{{ section.id }} .footer-adv__blurb p { margin: 0; }

  /* Newsletter Form */
  #shopify-section-{{ section.id }} .footer-adv__nl-form { margin: 0; }
  
  #shopify-section-{{ section.id }} .nl-form__row {
    display: flex;
    align-items: center;
    gap: 8px;
    max-width: 365px;
    border-radius: 12px;
    border: 1px solid var(--fg);
    padding: 0;
  }
  
  #shopify-section-{{ section.id }} .nl-form__input {
    flex: 1;
    min-width: 0;
    background: transparent;
    border: 0;
    outline: 0;
    padding: 10px 12px;
    color: var(--muted);
    font-family: 'Neue Montreal', sans-serif;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    letter-spacing: 0.56px;
  }
  
  #shopify-section-{{ section.id }} .nl-form__input::placeholder { color: var(--muted); opacity: 0.7; }

  #shopify-section-{{ section.id }} .nl-form__btn {
    border: 0;
    cursor: pointer;
    height: 40px;
    padding: 0 24px;
    border-radius: 12px;
    /* Metallic Gradient preserved */
    background: linear-gradient(87deg, #FFF -96.92%, #999 -88.86%, #BFBFBF -84.16%, #EBEBEB -71.32%, #ABABAB -50.9%, #EBEBEB -40%, #FFF -27.43%);
    color: #121212;
    font-family: 'Neue Montreal', sans-serif;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 100%;
    letter-spacing: 0.64px;
    text-transform: capitalize;
  }

  #shopify-section-{{ section.id }} .nl-form__note {
    margin-top: 12px;
    color: var(--muted);
    font-family: 'Neue Montreal', sans-serif;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    letter-spacing: 0.56px;
  }

  /* Link Columns */
  #shopify-section-{{ section.id }} .footer-adv__links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  #shopify-section-{{ section.id }} .links-col__title {
    margin: 0 0 16px;
    color: var(--fg);
    font-family: 'Neue Montreal', sans-serif;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 140%;
    letter-spacing: 0.32px;
    text-transform: capitalize;
  }

  #shopify-section-{{ section.id }} .links-col__list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 2px;
  }

  #shopify-section-{{ section.id }} .links-col__link {
    text-decoration: none;
    color: var(--muted);
    font-family: 'Neue Montreal', sans-serif;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    letter-spacing: 0.56px;
  }
  
  #shopify-section-{{ section.id }} .links-col__link:hover {
    text-decoration: underline;
    color: var(--accent);
  }

  /* Contact Column */
  #shopify-section-{{ section.id }} .footer-adv__contact {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  #shopify-section-{{ section.id }} .contact__title,
  #shopify-section-{{ section.id }} .contact__email-text {
    margin: 0 0 16px;
    color: var(--fg);
    font-family: 'Neue Montreal', sans-serif;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 140%;
    letter-spacing: 0.32px;
    text-transform: capitalize;
  }
  
  #shopify-section-{{ section.id }} .contact__email-text { margin-bottom: 12px; }

  #shopify-section-{{ section.id }} .contact__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    text-decoration: none;
    width: max-content;
    border-radius: 12px;
    background: linear-gradient(87deg, #FFF -96.92%, #999 -88.86%, #BFBFBF -84.16%, #EBEBEB -71.32%, #ABABAB -50.9%, #EBEBEB -40%, #FFF -27.43%);
    color: #121212;
    font-family: 'Neue Montreal', sans-serif;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 100%;
    letter-spacing: 0.64px;
    text-transform: capitalize;
    margin-bottom: 16px;
  }

  #shopify-section-{{ section.id }} .contact__email {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: var(--muted);
    font-family: 'Neue Montreal', sans-serif;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    letter-spacing: 0.56px;
  }
  
  #shopify-section-{{ section.id }} .contact__email svg path { fill: var(--accent); }

  /* Copyright */
  #shopify-section-{{ section.id }} .footer-adv__copyright {
    background: var(--bg);
    border-top: 1px solid var(--border-color);
  }
  
  #shopify-section-{{ section.id }} .footer-adv__copy-inner {
    max-width: 1680px;
    margin: 0 auto;
    padding: 32px 0;
  }
  
  #shopify-section-{{ section.id }} .copy__text {
    margin: 0;
    color: var(--muted);
    font-family: 'Neue Montreal', sans-serif;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    letter-spacing: 0.64px;
  }

