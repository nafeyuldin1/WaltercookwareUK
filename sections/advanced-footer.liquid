    #shopify-section-{{ section.id }} .footer-adv__grid { grid-template-columns: 1fr; gap: 64px; }
    #shopify-section-{{ section.id }} .footer-adv__links { grid-template-columns: 1fr; gap: 32px; justify-items: center; }
    #shopify-section-{{ section.id }} .links-col { text-align: center; }
