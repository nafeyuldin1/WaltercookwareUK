{% comment %}
  Renders a collection card
  Accepts:
  - card_collection: {Object} Collection Liquid object
  - custom_image: {Object} Image object (Optional)
  - custom_title: {String} Custom title text (Optional)
  - media_aspect_ratio: {String}
  - columns: {Number}
  - placeholder_image: {String}
  - badge_text: {String} Text for the badge
  - badge_bg: {Color}
  - badge_color: {Color}
{% endcomment %}

{%- liquid
  assign image_to_show = card_collection.featured_image
  if custom_image != blank
    assign image_to_show = custom_image
  endif

  assign ratio = 1
  if image_to_show and media_aspect_ratio == 'portrait'
    assign ratio = 0.8
  elsif image_to_show and media_aspect_ratio == 'adapt'
    assign ratio = image_to_show.aspect_ratio
  endif
  if ratio == 0 or ratio == null
    assign ratio = 1
  endif
  assign card_color_scheme = settings.card_color_scheme
  assign card_style = settings.card_style
  if wrapper_class == null or wrapper_class == 'none'
    assign card_color_scheme = settings.collection_card_color_scheme
    assign card_style = settings.collection_card_style
  endif
-%}

<div class="card-wrapper animate-arrow collection-card-wrapper">
  <div
    class="
      card
      card--{{ card_style }}
      {% if image_to_show %} card--media{% else %} card--text{% endif %}
      {% if card_style == 'card' %} color-{{ card_color_scheme }} gradient{% endif %}
      ratio
    "
    style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;"
  >
    <div
      class="card__inner {% if card_style == 'standard' %}color-{{ card_color_scheme }} gradient{% endif %} ratio"
      style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;"
    >
      {%- if image_to_show -%}
        <div class="card__media">
          <div class="media media--transparent media--hover-effect">
            <img
              srcset="
                {%- if image_to_show.width >= 165 -%}{{ image_to_show | image_url: width: 165 }} 165w,{%- endif -%}
                {%- if image_to_show.width >= 330 -%}{{ image_to_show | image_url: width: 330 }} 330w,{%- endif -%}
                {%- if image_to_show.width >= 535 -%}{{ image_to_show | image_url: width: 535 }} 535w,{%- endif -%}
                {%- if image_to_show.width >= 750 -%}{{ image_to_show | image_url: width: 750 }} 750w,{%- endif -%}
                {%- if image_to_show.width >= 1000 -%}{{ image_to_show | image_url: width: 1000 }} 1000w,{%- endif -%}
                {{ image_to_show | image_url }} {{ image_to_show.width }}w
              "
              src="{{ image_to_show | image_url: width: 1500 }}"
              sizes="
                (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: columns }}px,
                (min-width: 750px) {% if columns > 1 %}calc((100vw - 10rem) / 2){% else %}calc(100vw - 10rem){% endif %},
                calc(100vw - 3rem)
              "
              alt="{{ image_to_show.alt | escape }}"
              height="{{ image_to_show.height }}"
              width="{{ image_to_show.width }}"
              loading="lazy"
              class="motion-reduce"
            >
          </div>
        </div>
      {%- endif -%}

      {% comment %} 
        CUSTOM BADGE LOGIC
      {% endcomment %}
      {% if badge_text != blank %}
        <span class="custom-badge" style="background-color: {{ badge_bg }}; color: {{ badge_color }};">
          {{ badge_text }}
        </span>
      {% endif %}

      {%- if card_collection == blank and image_to_show == blank -%}
        <div class="card__media">
          {{ placeholder_image | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- endif -%}
    </div>

    {% comment %} 
      CONTENT AREA (Moved logic to be always present for custom styling via CSS in section) 
    {% endcomment %}
    <div class="card__content">
      <div class="card__information">
        <h3 class="card__heading">
          <a
            {% if card_collection == blank %}
              role="link" aria-disabled="true"
            {% else %}
              href="{{ card_collection.url }}"
            {% endif %}
            class="full-unstyled-link"
          >
            {% comment %} === UPDATED TITLE LOGIC START === {% endcomment %}
            {%- if custom_title != blank -%}
              {{- custom_title | escape -}}
            {%- elsif card_collection.title != blank -%}
              {{- card_collection.title | escape -}}
            {%- else -%}
              {{ 'onboarding.collection_title' | t }}
            {%- endif -%}
            {% comment %} === UPDATED TITLE LOGIC END === {% endcomment %}
            
             {%- if card_collection.description == blank -%}
                <span class="icon-wrap">
                  {{- 'icon-arrow.svg' | inline_asset_content -}}
                </span>
             {%- endif %}
          </a>
        </h3>
        {%- if card_collection.description != blank -%}
          <p class="card__caption">
            {{- card_collection.description | strip_html | truncatewords: 12 -}}
             <span class="icon-wrap">
               {{- 'icon-arrow.svg' | inline_asset_content -}}
             </span>
          </p>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>